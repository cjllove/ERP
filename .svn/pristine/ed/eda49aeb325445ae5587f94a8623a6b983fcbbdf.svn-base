                    {
                        djFDSbarcode = djFDSbarcode + dr[0].ToString() + ",";
                    }
                }
                djFDSbarcode = djFDSbarcode.TrimEnd(',');
                getdjFDScs.Text = djFDSbarcode;
            }

            PageContext.RegisterStartupScript("PrintLable()");
        }

