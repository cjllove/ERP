                    }
                }
                djDSbarcode = djDSbarcode.TrimEnd(',');
                getdjDScs.Text = djDSbarcode;
            }
            if (djFDScs.Length > 0)
            {
                sql = string.Format(@"SELECT A.BARCODE FROM dat_ck_barcode A WHERE SEQNO IN ({0})", djFDScs);
