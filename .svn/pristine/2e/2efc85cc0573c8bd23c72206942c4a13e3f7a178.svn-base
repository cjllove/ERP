                string msg1 = "";
                string msg2 = "";
                foreach (DataRow row in dt.Rows)
                {
                    row["BZSL"] = "0";
                    row["DHSL"] = "0";
                    row["KCSL"] = "0";
                    row["HSJE"] = "0";
                    row["HWID"] = "";
                    object obj = DbHelperOra.GetSingle(string.Format("SELECT ISLOT FROM DOC_GOODS WHERE GDSEQ = '{0}'", row["GDSEQ"].ToString()));

                    if (obj.ToString() == "2")
