                //data: src,
                dataType: 'json',
                complete: function () {
                    RefreshPage();
                }
            })
        }
        // $('.gw-number-box').gwNumberBox({ min: 1, max: 100, defaultVal: 1 });
        $(function () {
            /*------------
              全选/全不选
              ------------*/
