/*
购物车——商品搜索组件样式
@Author 鞠怡
@Date 2015/07/28
*/
.gw-select{
	width: 100%;
	overflow:hidden;zoom:1;
	padding:10px;
}
.gw-select ul{
	width: 100%;
	float: left ;
	padding:0;
	margin: 0;
	/*position: relative;*/
}
.gw-select ul>li{
	float: left;
	list-style-type:none;
	height: 24px;
	line-height: 24px;
	border: 1px solid #99BCE8;
	border-radius: 2px;
	min-width: 80px;
	margin: 0 10px 10px 0;
	padding: 0 31px 0 10px;
	position: relative;
    color:#0440A5;
    font-size:12px;

}
.gw-select ul>li:first{
	margin: 10px 10px 0 10px;
}
.gw-select ul>li span.close{
	/*border: 1px solid #616161;*/
	background-color: #aaa;
	font-family: 微软雅黑;
	color: white;
	border-radius: 2px;
	height: 20px;
	line-height: 20px;
	position:absolute;
	right: 2px;
	top:1px;
	width: 19px;
	text-align: center;
}
.gw-select ul>li span.close:hover{
	/*border: 1px solid #616161;*/
	background-color: #D65252;
	cursor: pointer;
}